@model IEnumerable<CrudProductos.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-success"><i class="bi bi-people-fill"></i> Cartera de Clientes</h2>
        <a asp-action="Create" class="btn btn-success btn-lg shadow-sm">
            <i class="bi bi-person-plus-fill"></i> Nuevo Cliente
        </a>
    </div>

    <div class="card shadow border-0 rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-success text-white">
                    <tr>
                        <th class="py-3 ps-4">Cliente</th>
                        <th class="py-3">Producto de Interés</th>
                        <th class="py-3">Atendido Por (Vendedor)</th>
                        <th class="py-3 text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold">@item.Nombres @item.Apellidos</div>
                                <div class="small text-muted"><i class="bi bi-envelope"></i> @item.Email</div>
                            </td>

                            <td>
                                @if (item.Producto != null)
                                {
                                    <span class="badge bg-light text-dark border">@item.Producto.Nombre</span>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Sin producto</span>
                                }
                            </td>

                            <td>
                                @if (item.Usuario != null)
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2 shadow-sm" style="width: 35px; height: 35px;">
                                            @(string.IsNullOrEmpty(item.Usuario.Nombres) ? "?" : item.Usuario.Nombres.Substring(0, 1))
                                        </div>
                                        <div>
                                            <div class="small fw-bold">@item.Usuario.Nombres @item.Usuario.Apellidos</div>
                                            <div class="small text-muted" style="font-size: 0.75em;">
                                                <i class="bi bi-tag"></i> Cód: @item.Usuario.CodigoVendedor
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <span class="badge bg-secondary text-white">
                                        <i class="bi bi-exclamation-circle"></i> Sin Asignar
                                    </span>
                                }
                            </td>

                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detalles">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>