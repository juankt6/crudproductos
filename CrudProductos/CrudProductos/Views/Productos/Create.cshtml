@model CrudProductos.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Registrar Nuevo Producto</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold">Nombre del Producto</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Laptop Dell" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Precio" class="form-label fw-bold">Precio</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Precio" class="form-control" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="Precio" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Categoria" class="form-label fw-bold">Categoría</label>
                                <input asp-for="Categoria" class="form-control" placeholder="Ej: Electrónica" />
                                <span asp-validation-for="Categoria" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="FechaCreacion" class="form-label fw-bold">Fecha de Registro</label>
                            <input asp-for="FechaCreacion" class="form-control" type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                            <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">Cancelar</a>
                            <input type="submit" value="Guardar Producto" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}