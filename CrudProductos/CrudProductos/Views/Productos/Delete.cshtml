@model CrudProductos.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-3 border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-exclamation-triangle-fill"></i> Eliminar Producto</h4>
                </div>
                <div class="card-body p-4 text-center">

                    <div class="mb-4">
                        <i class="bi bi-trash3 text-danger" style="font-size: 4rem;"></i>
                    </div>

                    <h3 class="text-danger fw-bold">¿Estás seguro de eliminar este producto?</h3>
                    <p class="text-muted mb-4">Esta acción es irreversible y el producto desaparecerá del inventario.</p>

                    <div class="bg-light p-3 rounded mb-4 text-start">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Producto:</dt>
                            <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Nombre)</dd>

                            <dt class="col-sm-4">Precio:</dt>
                            <dd class="col-sm-8">$ @Html.DisplayFor(model => model.Precio)</dd>

                            <dt class="col-sm-4">Stock:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Stock)</dd>
                        </dl>
                    </div>

                    <form asp-action="Delete" class="d-flex justify-content-center gap-3">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-x-lg"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger btn-lg shadow fw-bold">
                            <i class="bi bi-trash-fill"></i> Confirmar Eliminación
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>