@model IEnumerable<CrudProductos.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="bi bi-box-seam-fill"></i> Inventario de Productos</h2>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-lg"></i> Nuevo Producto
        </a>
    </div>

    <div class="card shadow border-0 rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="bg-primary text-white">
                    <tr>
                        <th class="py-3 ps-4">Nombre</th>
                        <th class="py-3">Categoría</th>
                        <th class="py-3">Precio</th>
                        <th class="py-3">Stock</th>
                        <th class="py-3 text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>
                                <span class="badge bg-light text-dark border">
                                    @Html.DisplayFor(modelItem => item.Categoria.Nombre)
                                </span>
                            </td>
                            <td class="text-success fw-bold">$ @Html.DisplayFor(modelItem => item.Precio)</td>
                            <td>
                                @if (item.Stock < 5)
                                {
                                    <span class="badge bg-danger">@item.Stock (Bajo)</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@item.Stock</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="Ver Detalles">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>