@model IEnumerable<CrudProductos.Models.Producto>

@{
    ViewData["Title"] = "Lista de Productos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>📦 Mis Productos</h1>
        <a asp-action="Create" class="btn btn-primary btn-lg">
            + Nuevo Producto
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Precio)</th>
                        <th>@Html.DisplayNameFor(model => model.Categoria)</th>
                        <th>Fecha</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td class="align-middle fw-bold text-success">$ @Html.DisplayFor(modelItem => item.Precio)</td>
                            <td class="align-middle"><span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.Categoria)</span></td>
                            <td class="align-middle">@item.FechaCreacion.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-dark">Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Detalles</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>