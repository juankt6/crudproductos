@model CrudProductos.Models.Venta

@{
    ViewData["Title"] = "Anular Venta";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-3 border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-x-circle-fill"></i> Anular Venta</h4>
                </div>
                <div class="card-body p-4 text-center">

                    <h3 class="text-danger fw-bold mb-3">¿Desea anular este registro?</h3>
                    <p class="text-muted mb-4">Esta acción eliminará la venta del historial financiero.</p>

                    <div class="bg-light p-3 rounded mb-4">
                        <div class="row">
                            <div class="col-6 text-end text-muted">Monto:</div>
                            <div class="col-6 text-start fw-bold text-dark">$ @Html.DisplayFor(model => model.Total)</div>

                            <div class="col-6 text-end text-muted">Fecha:</div>
                            <div class="col-6 text-start">@Html.DisplayFor(model => model.FechaVenta)</div>
                        </div>
                    </div>

                    <form asp-action="Delete" class="d-flex justify-content-center gap-3">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-arrow-return-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger btn-lg shadow fw-bold">
                            <i class="bi bi-trash"></i> Eliminar Registro
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>