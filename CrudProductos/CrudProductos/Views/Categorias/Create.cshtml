@model CrudProductos.Models.Categoria

@{
    ViewData["Title"] = "Nueva Categoría";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-tag-fill"></i> Crear Categoría</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Electrónica" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold"></label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Breve descripción..."></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="form-check form-switch mb-4">
                            <input class="form-check-input" type="checkbox" asp-for="Estado" checked>
                            <label class="form-check-label" asp-for="Estado">Categoría Activa</label>
                        </div>

                        <div class="d-flex justify-content-between align-items-center border-top pt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                                <i class="bi bi-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}