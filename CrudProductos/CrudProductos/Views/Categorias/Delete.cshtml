@model CrudProductos.Models.Categoria

@{
    ViewData["Title"] = "Eliminar";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-3 border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-exclamation-triangle-fill"></i> Eliminar Categoría</h4>
                </div>
                <div class="card-body p-4 text-center">
                    <h3 class="text-danger mb-4">¿Estás seguro de eliminar esto?</h3>
                    <p class="text-muted">Esta acción no se puede deshacer y podría afectar a los productos asociados.</p>

                    <div class="bg-light p-3 rounded mb-4 text-start">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Nombre:</dt>
                            <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Nombre)</dd>

                            <dt class="col-sm-4">Descripción:</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>
                        </dl>
                    </div>

                    <form asp-action="Delete" class="d-flex justify-content-center gap-3">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-x-lg"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger btn-lg shadow">
                            <i class="bi bi-trash-fill"></i> Confirmar Eliminación
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>