@model IEnumerable<CrudProductos.Models.Cliente>

@{
    ViewData["Title"] = "Gestión de Clientes";
    // Objeto vacío por si queremos inicializar valores
    var nuevoCliente = new CrudProductos.Models.Cliente();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="display-6 fw-bold text-primary">Sistema de Gestión</h2>
        <p class="text-muted">Administra clientes y ventas en una sola pantalla.</p>
    </div>
    <a asp-controller="Productos" asp-action="Index" class="btn btn-dark shadow">
        📦 Ir al Inventario de Productos
    </a>
</div>

<div class="row">
    <div class="col-md-5">
        <div class="card shadow border-primary mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">👤 Registrar Nuevo Cliente</h5>
            </div>
            <div class="card-body">
                <form asp-action="CrearCliente" method="post">

                    <h6 class="text-muted border-bottom pb-2 mb-3">Datos Personales</h6>

                    <div class="mb-3">
                        <label class="form-label small fw-bold">Cédula / RUC</label>
                        <input name="CedulaRuc" class="form-control" placeholder="Ej: 0102030405" required maxlength="13" />
                    </div>

                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label small fw-bold">Nombres</label>
                            <input name="Nombres" class="form-control" placeholder="Juan" required />
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label small fw-bold">Apellidos</label>
                            <input name="Apellidos" class="form-control" placeholder="Pérez" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label small fw-bold">F. Nacimiento</label>
                            <input name="FechaNacimiento" type="date" class="form-control" />
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label small fw-bold">Género</label>
                            <select name="Genero" class="form-select">
                                <option value="M">Masculino</option>
                                <option value="F">Femenino</option>
                                <option value="O">Otro</option>
                            </select>
                        </div>
                    </div>

                    <h6 class="text-muted border-bottom pb-2 mb-3 mt-2">Contacto</h6>

                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label small fw-bold">Email</label>
                            <input name="Email" type="email" class="form-control" placeholder="correo@ejemplo.com" required />
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label small fw-bold">Celular</label>
                            <input name="Celular" class="form-control" placeholder="099..." />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label small fw-bold">Dirección</label>
                        <input name="Direccion" class="form-control" placeholder="Av. Principal y Calle 2" />
                    </div>

                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label small fw-bold">Ciudad</label>
                            <input name="Ciudad" class="form-control" />
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label small fw-bold">Provincia</label>
                            <input name="Provincia" class="form-control" />
                        </div>
                    </div>

                    <h6 class="text-muted border-bottom pb-2 mb-3 mt-2">Detalles de Venta</h6>

                    <div class="mb-3">
                        <label class="form-label small fw-bold text-primary">Producto de Interés</label>
                        <select name="ProductoId" class="form-select border-primary" asp-items="ViewBag.ListaProductos" required>
                            <option value="">-- Seleccione Producto --</option>
                        </select>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" name="EstaActivo" value="true" checked id="checkActivo">
                        <label class="form-check-label small" for="checkActivo">
                            Cliente Activo
                        </label>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success py-2">
                            <i class="bi bi-save"></i> Guardar Cliente
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-7">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">📋 Últimos Clientes</h5>
                <span class="badge bg-light text-dark">Total: @Model.Count()</span>
            </div>
            <div class="card-body p-0 table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Cliente</th>
                            <th>Ubicación</th>
                            <th>Interés</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-bold">@item.Nombres @item.Apellidos</div>
                                        <div class="small text-muted">CI: @item.CedulaRuc</div>
                                    </td>
                                    <td>
                                        <div class="small">@item.Ciudad</div>
                                        <div class="badge bg-light text-secondary border">@item.Celular</div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info text-dark">
                                            @item.Producto?.Nombre
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-controller="Clientes" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Ver todo">👁️</a>
                                            <a asp-controller="Clientes" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Editar">✏️</a>
                                            <a asp-controller="Clientes" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Borrar">🗑️</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-5">
                                    <h4 class="fw-light">No hay datos</h4>
                                    <p>Registra el primer cliente en el formulario.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>